@model SistemaVendasWeb.Models.Endereco;

<div class="panel">
    <div class="panel-header"><span>Endereço</span></div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.Rua)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Numero)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Complemento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Bairro)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cidade)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CEP)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.Rua)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Complemento)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Bairro)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Cidade)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.CEP)
                    </td>
                </tr>
            </tbody>
        </table>
        <a class="btn btn-default" asp-controller="Endereco" asp-action="Editar" asp-route-id="@Model.Id">Editar</a>
    </div>
</div>

